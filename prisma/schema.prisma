generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  name  String?
  email String?
  workouts Workout[]
}

model Exercise {
  id           String  @id @default(cuid())
  name         String
  category     String
  defaultUnit  String  @default("kg")
  notes        String?
  sets         Set[]
}

model Workout {
  id        String  @id @default(cuid())
  date      DateTime
  title     String?
  notes     String?
  user      User? @relation(fields: [userId], references: [id])
  userId    String?
  sets      Set[]
}

model Set {
  id          String   @id @default(cuid())
  workout     Workout  @relation(fields: [workoutId], references: [id])
  workoutId   String
  exercise    Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId  String
  reps        Int
  weight      Float
  rpe         Float?
  distance    Float?
  duration    Int?
  createdAt   DateTime @default(now())
}

model BodyLog {
  id          String   @id @default(cuid())
  date        DateTime
  bodyWeight  Float
  bodyFat     Float?
  chest       Float?
  waist       Float?
  hips        Float?
  thigh       Float?
  arm         Float?
}

model Goal {
  id           String   @id @default(cuid())
  type         String
  targetNumber Float
  unit         String?
  deadline     DateTime?
  status       String   @default("active")
}
