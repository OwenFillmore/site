# Database URL for Prisma. SQLite by default; swap to Postgres/Supabase in production
DATABASE_URL="file:./dev.db"

# Feature flag to enable auth (NextAuth). Default disabled for single-user mode.
AUTH_ENABLED=false

# NextAuth config (only needed if AUTH_ENABLED=true)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-strong-secret
